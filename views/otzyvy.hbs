                        <li><a href="/otzyvy" class="headerLink">Отзывы</a></li>    
                        <li><a href="/checklist" class="headerLink">To do list</a></li>                   
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <section class="reviews">
        <div class="container">
            <h1>Отзывы</h1>

            <div class="reviewForm">
                <h2>Оставить отзыв</h2>
                <form id="reviewForm" action="/submit-review" method="post">
                    <input type="text" name="name" placeholder="Ваше имя" required>
                    <input type="email" name="email" placeholder="Ваш email" required>
                    <textarea name="message" placeholder="Ваш отзыв" required></textarea>
                    <div class="reviewSubmitContent">
                        <input type="submit" id="submitButton" name="submit" class="btnBackground" value="Отправить отзыв">
                    </div>
                </form>
                <div id="message" style="display:none;">Ваш отзыв принят</div>
            </div>

            <div class="reviewSeparator"></div>

            <div class="reviewColumn">
                {{#each reviews}}
                <div class="reviewItem">
                    <div class="reviewAuthor">
                        <img src="/img/reviews/author1.jpg" alt="Автор отзыва">
                        <h3>{{name}}</h3>
                    </div>
                    <p>{{message}}</p>
                </div>
                {{/each}}
            </div>
        </div>
    </section>

    <footer>
        <div class="footerTop">
            <div class="container">
                <div class="footerContainer">
                    <div class="footerItem">
                        <p>Мы находимся по адресу</p>
